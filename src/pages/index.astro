---
import Layout from '../layouts/Layout.astro';

const waNumber = "27732929543";
const defaultBookingMessage = "Hi BodiedHair, I would like to book an appointment.";

const services = [
  { category: "Installs & Styling", items: [
    { name: "5x5 Wig Install", time: "1 h", price: "R 300" },
    { name: "Basic Install", time: "1 h 30 min", price: "R 400" },
    { name: "Install + Style", time: "1 h 30 min", price: "R 550" },
    { name: "Styled Install with Curls", time: "1 h 30 min", price: "R 650" },
    { name: "Bodied Curls Install", time: "1 h 30 min", price: "R 750" },
    { name: "Curly Updo", time: "1 h 30 min", price: "R 650" },
    { name: "Frontal Pony", time: "2 h", price: "R 650" },
    { name: "Bridal Style", time: "2 h", price: "From R 700-850" },
  ]},
  { category: "Customisation & Combos", items: [
    { name: "Customisation Only", time: "5 min", price: "R 300" },
    { name: "Customisation + Basic Install", time: "1 h 30 min", price: "R 700" },
    { name: "Customisation + Styled Install", time: "1 h 30 min", price: "R 850" },
    { name: "Layers and Curling Only", time: "30 min", price: "R 400" },
  ]},
  { category: "Maintenance & Prep", items: [
    { name: "Wig Wash", time: "5 min", price: "R 250" },
    { name: "Wig Ironing", time: "5 min", price: "R 150" },
    { name: "Wig Treatment", time: "5 min", price: "R 350" },
    { name: "Plucking Only", time: "5 min", price: "R 150" },
    { name: "Bleaching Knots", time: "5 min", price: "R 150" },
  ]}
];
---

<Layout title="BODIEDHAIR | Durban Hairstylist & Makeup">
	
	<nav class="fixed w-full top-4 z-50 px-4">
		<div class="max-w-5xl mx-auto bg-white/90 backdrop-blur-md rounded-full px-6 py-3 flex justify-between items-center shadow-sm">
			<span class="serif text-2xl tracking-widest font-semibold uppercase">Bodied<span class="font-light">Hair</span></span>
			
			<div class="hidden md:flex items-center gap-6">
				<a href="#services" class="text-sm uppercase tracking-widest hover:text-[#D4C09E] transition-colors">Services</a>
				<a href="#portfolio" class="text-sm uppercase tracking-widest hover:text-[#D4C09E] transition-colors">Portfolio</a>
				<a href={`https://wa.me/${waNumber}?text=${encodeURIComponent(defaultBookingMessage)}`} target="_blank" class="bg-[#1A1A1A] text-white px-6 py-2 rounded-full hover:bg-black transition-colors duration-300">Book Now</a>
			</div>

			<button id="mobile-menu-btn" class="md:hidden p-2 text-[#1A1A1A] focus:outline-none">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
			</button>
		</div>

		<div id="mobile-menu" class="hidden absolute top-full left-4 right-4 mt-2 bg-white/95 backdrop-blur-xl rounded-[2rem] shadow-xl p-6 flex flex-col gap-4 text-center border border-gray-100 transition-all duration-300">
			<a href="#services" class="mobile-link text-lg uppercase tracking-widest py-2">Services</a>
			<a href="#portfolio" class="mobile-link text-lg uppercase tracking-widest py-2">Portfolio</a>
			<a href={`https://wa.me/${waNumber}?text=${encodeURIComponent(defaultBookingMessage)}`} target="_blank" class="mobile-link bg-[#1A1A1A] text-white px-6 py-3 rounded-full mt-2">Book Now</a>
		</div>
	</nav>

	<header class="relative min-h-screen flex flex-col justify-center items-center text-center px-4 pt-24 overflow-hidden">
		<div class="absolute inset-0 z-0">
			<img src="/hero-bg.jpg" alt="BodiedHair Client Background" class="w-full h-full object-cover" onerror="this.src='https://images.unsplash.com/photo-1519699047748-de8e457a634e?q=80&w=2000&auto=format&fit=crop'" />
			<div class="absolute inset-0 bg-[#FBF9F6]/85 backdrop-blur-[2px]"></div>
		</div>

		<div class="relative z-10" data-aos="fade-up">
			<div class="w-40 h-40 bg-white shadow-xl rounded-full mb-8 mx-auto flex items-center justify-center p-2">
				<img src="/logo.jpeg" alt="Bodied Hair Logo" class="w-full h-full object-cover rounded-full" />
			</div>
			
			<h1 class="text-5xl md:text-7xl mb-6">Flawless Installs.<br/>Ultimate Aesthetics.</h1>
			<p class="text-lg md:text-xl text-gray-700 max-w-xl mx-auto mb-10 font-medium">Premium wig customization, installs, and makeup styling based in Durban. Experience the BodiedHair standard.</p>
			<a href="#services" class="inline-block bg-[#E5D3B3] text-[#1A1A1A] px-8 py-4 rounded-full text-lg font-medium hover:bg-[#D4C09E] transition-all transform hover:scale-105 shadow-md">View Services</a>
		</div>
	</header>

	<section id="services" class="py-24 px-4 max-w-6xl mx-auto">
		<div class="text-center mb-16" data-aos="fade-up">
			<h2 class="text-4xl mb-4">Service Menu</h2>
			<p class="text-gray-500 mb-2">Expert care for a seamless look.</p>
            <p class="text-sm font-medium text-[#D4C09E] uppercase tracking-widest animate-pulse">Tap a service to book</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{services.map((category, index) => (
				<div class="bg-white rounded-[2rem] p-8 shadow-sm hover:shadow-md transition-shadow" data-aos="fade-up" data-aos-delay={index * 100}>
					<h3 class="text-2xl mb-6 text-center border-b border-gray-100 pb-4">{category.category}</h3>
					<ul class="space-y-2">
						{category.items.map(item => {
                            const serviceMessage = `Hi BodiedHair, I would like to book the ${item.name} (${item.price}).`;
                            return (
							<li>
                                <a href={`https://wa.me/${waNumber}?text=${encodeURIComponent(serviceMessage)}`} target="_blank" class="flex justify-between items-end group w-full hover:bg-gray-50 p-3 -mx-3 rounded-xl transition-colors cursor-pointer">
                                    <div>
                                        <h4 class="font-medium text-[15px] group-hover:text-[#D4C09E] transition-colors">{item.name}</h4>
                                        <span class="text-xs text-gray-400">{item.time}</span>
                                    </div>
                                    <div class="border-b border-dotted border-gray-300 flex-grow mx-4 mb-2 group-hover:border-[#D4C09E] transition-colors"></div>
                                    <span class="font-medium group-hover:text-[#D4C09E] whitespace-nowrap mb-1">{item.price}</span>
                                </a>
							</li>
						)})}
					</ul>
				</div>
			))}
		</div>
	</section>

	<section id="portfolio" class="py-24 px-4 bg-white rounded-[3rem] mx-4 md:mx-10 my-10 shadow-sm" data-aos="fade-up">
		<div class="max-w-6xl mx-auto text-center">
			<h2 class="text-4xl mb-4">The Bodied Portfolio</h2>
			<p class="text-gray-500 mb-12">Swipe through our favorite installs and styling.</p>
			
			<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6" id="portfolio-grid">
				{Array.from({ length: 13 }).map((_, i) => (
					<div class={`portfolio-item aspect-[4/5] bg-gray-50 rounded-[2rem] overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 ${i >= 4 ? 'hidden' : ''}`}>
						<img src={`/portfolio/${i + 1}.jpg`} alt={`Bodied Hair Work ${i + 1}`} class="w-full h-full object-cover hover:scale-105 transition-transform duration-700" onerror="this.src=`/portfolio/${i + 1}.jpeg`; this.onerror=null;" />
					</div>
				))}
			</div>
			
			<button id="see-more-btn" class="mt-12 bg-transparent border-2 border-[#1A1A1A] text-[#1A1A1A] px-10 py-3 rounded-full font-medium hover:bg-[#1A1A1A] hover:text-white transition-colors duration-300">
				See More Work
			</button>
		</div>
	</section>

	<section class="py-24 px-4 max-w-4xl mx-auto" data-aos="fade-up">
		<div class="bg-[#1A1A1A] text-white rounded-[3rem] p-8 md:p-12 shadow-xl">
			<h2 class="text-3xl mb-8 text-center text-[#E5D3B3]">Policy & Terms</h2>
			<ul class="space-y-4 font-light text-sm md:text-base opacity-90 list-disc pl-4">
				<li>Please make a <strong>50% deposit</strong> of your total amount to secure your appointment (non-refundable) within 10 minutes of making your booking.</li>
				<li>No payment, no appointment.</li>
				<li>Please note that we do not install hair that is NOT customised.</li>
				<li>Please bring your wig <strong>2 days before</strong> your appointment.</li>
				<li>Please bring CLEAN hair to your hair appointment.</li>
				<li>20 minutes late your appointment will be cancelled. 15 minutes late a fee of R100 will be charged.</li>
				<li>Due to limited space, please come ALONE to your appointment.</li>
				<li>Early and Late slots available at an additional fee of R200 (please send WhatsApp).</li>
				<li>Clients can cancel or reschedule appointments up to 48 hours before start time.</li>
			</ul>
			
			<div class="mt-8 p-6 bg-white/10 rounded-[2rem]">
				<h3 class="font-medium text-[#E5D3B3] mb-2 uppercase tracking-wider text-sm">Banking Details</h3>
				<p class="font-light">STANDARD BANK - Bodiedbylihle</p>
				<p class="font-light">Acc no : 1014 51 23 527</p>
				<p class="font-light">Branch code: 4126</p>
				<p class="mt-4 text-sm italic text-red-300">*Immediate Payment Only. Please Send POP on WhatsApp.*</p>
			</div>
		</div>
	</section>

	<section id="contact" class="py-24 px-4 max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-center" data-aos="fade-up">
		<div class="w-full h-[450px] rounded-[3rem] overflow-hidden shadow-lg border-4 border-white">
			<iframe 
				src="https://maps.google.com/maps?q=114+Rosetta+Road,+Windermere,+Berea,+South+Africa&t=&z=14&ie=UTF8&iwloc=&output=embed" 
				width="100%" 
				height="100%" 
				style="border:0;" 
				allowfullscreen="" 
				loading="lazy" 
				referrerpolicy="no-referrer-when-downgrade">
			</iframe>
		</div>

		<div class="px-4 lg:px-8">
			<h2 class="text-4xl mb-8">Get in Touch</h2>
			
			<div class="space-y-8">
				<div class="flex flex-col">
					<span class="text-sm text-gray-500 uppercase tracking-widest mb-2 block">Contact</span>
					<a href="https://wa.me/27732929543" class="text-xl hover:text-[#D4C09E] transition-colors inline-block mb-1">073 292 9543</a>
					<a href="mailto:thembelihlensimba@gmail.com" class="text-xl hover:text-[#D4C09E] transition-colors break-words">thembelihlensimba@gmail.com</a>
				</div>

				<div class="flex flex-col">
					<span class="text-sm text-gray-500 uppercase tracking-widest mb-3 block">Socials</span>
					<div class="flex flex-col gap-4">
						<a href="https://www.instagram.com/bodiedhair.sa" target="_blank" class="flex items-center gap-4 group w-max">
							<div class="bg-gray-100 p-3 rounded-full group-hover:bg-[#E5D3B3] transition-colors duration-300">
								<svg class="w-6 h-6 text-[#1A1A1A]" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
							</div>
							<span class="text-lg font-medium group-hover:text-[#D4C09E] transition-colors">@bodiedhair.sa</span>
						</a>
						<a href="https://www.tiktok.com/@bodiedhair.sa" target="_blank" class="flex items-center gap-4 group w-max">
							<div class="bg-gray-100 p-3 rounded-full group-hover:bg-[#E5D3B3] transition-colors duration-300">
								<svg class="w-6 h-6 text-[#1A1A1A]" fill="currentColor" viewBox="0 0 24 24"><path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/></svg>
							</div>
							<span class="text-lg font-medium group-hover:text-[#D4C09E] transition-colors">@bodiedhair.sa</span>
						</a>
					</div>
				</div>

				<div class="bg-white p-6 md:p-8 rounded-[2rem] shadow-sm border border-gray-50 mt-8">
					<span class="text-sm text-gray-500 uppercase tracking-widest mb-6 block">Trading Hours</span>
					<ul class="space-y-3 text-sm font-medium">
						<li class="flex justify-between border-b border-gray-50 pb-2"><span class="text-gray-400">Sunday</span> <span class="text-gray-400">Closed</span></li>
						<li class="flex justify-between border-b border-gray-50 pb-2"><span>Monday</span> <span>9:00 - 16:00</span></li>
						<li class="flex justify-between border-b border-gray-50 pb-2"><span>Tuesday</span> <span>8:00 - 17:00</span></li>
						<li class="flex justify-between border-b border-gray-50 pb-2"><span>Wednesday</span> <span>8:00 - 17:00</span></li>
						<li class="flex justify-between border-b border-gray-50 pb-2"><span>Thursday</span> <span>8:00 - 17:00</span></li>
						<li class="flex justify-between border-b border-gray-50 pb-2"><span>Friday</span> <span>8:00 - 17:00</span></li>
						<li class="flex justify-between"><span>Saturday</span> <span>8:00 - 17:00</span></li>
					</ul>
				</div>
			</div>
		</div>
	</section>

	<footer class="bg-white py-10 text-center text-sm text-gray-400 rounded-t-[3rem] mx-4 mt-12 shadow-[0_-10px_40px_-15px_rgba(0,0,0,0.05)]">
		<p>© {new Date().getFullYear()} BodiedHair. All rights reserved.</p>
	</footer>

	<script is:inline>
		// Hamburger Menu Logic
		const mobileMenuBtn = document.getElementById('mobile-menu-btn');
		const mobileMenu = document.getElementById('mobile-menu');
		const mobileLinks = document.querySelectorAll('.mobile-link');

		mobileMenuBtn.addEventListener('click', () => {
			mobileMenu.classList.toggle('hidden');
		});

		// Close menu when a link is clicked
		mobileLinks.forEach(link => {
			link.addEventListener('click', () => {
				mobileMenu.classList.add('hidden');
			});
		});

		// Portfolio "See More" Logic
		const seeMoreBtn = document.getElementById('see-more-btn');
		const hiddenItems = document.querySelectorAll('.portfolio-item.hidden');
		let isExpanded = false;

		seeMoreBtn.addEventListener('click', () => {
			if (!isExpanded) {
				hiddenItems.forEach(item => {
					item.classList.remove('hidden');
				});
				seeMoreBtn.textContent = 'See Less';
				isExpanded = true;
			} else {
				hiddenItems.forEach(item => {
					item.classList.add('hidden');
				});
				seeMoreBtn.textContent = 'See More Work';
				document.getElementById('portfolio').scrollIntoView({ behavior: 'smooth' });
				isExpanded = false;
			}
		});
	</script>
</Layout>